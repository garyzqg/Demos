<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d9d9d9"
    android:clipChildren="false"
    xmlns:monkey="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.administrator.demos.ui.BezierActivity">
    <com.example.administrator.demos.view.DragBubbleView
        android:id="@+id/dragBubbleView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        monkey:bubbleColor="#ff0000"
        monkey:bubbleRadius="16dp"
        monkey:textColor="#ffffff"
        monkey:textSize="16sp"/>
    <Button
        android:id="@+id/reCreateBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:text="重置" />
</RelativeLayout>
